<%= render "layouts/header" %>


<div class = "pure-g">

    <div class = "container">
            <div class = "pure-u-1-2 left-column">
                <h1 class= "left_align"><% if @me.id == current_user %> Hello, <% end %> <%= @me.fname%> </h1>
                <div class = "profile_image">
                    <%= image_tag @me.image_url(:thumb).to_s %>
                </div>
                <p><%= @me.college %> </p>
                <p><%= @me.year %> </p>
                <p><%= mail_to @me.email, "Email me!" %></p>

            <% if @me.id == current_user %>
                <div class = "section authorized">
                    <p> <%= link_to "Edit your information, friend!", edit_user_path(@me) %></p>
                </div>


                    <div class="spacing_button">
                        <%= link_to "Create a New Project", new_project_path, class: "pure-button" %>
                    </div>

            <% end %>

            </div>
            
            <div class = "pure-u-1-2 right-column">

                <% if @me.id == current_user %>
                <div class = "section authorized" id= "activity">
                        ACTIVITY ON YOUR PROJECTS</br>

                            <% myprojects = @me.projects %>

                            <% myprojects.each do |p| %>
                                    <% auditions = p.auditions %>
                                <% auditions.each do |a| %>

                                    <% if a.role_id == nil && a.user_id != nil %>
                                        <p>    <%= link_to a.user_name, user_path(a.user_id) %> 
                                            <%= " has an audition on #{ a.when.strftime("%B %d at %l%p") } 
                                            for " %>
                                            <%= link_to p.title, "/projects/#{p.id}/auditions" %>
                                        </p>
                                    <% elsif a.role_id != nil %>
                                        <% crew_position = Role.find(a.role_id).title %>
                                        <% crew_user = User.find(a.user_id).fname %>
                                        <p>    <%= link_to crew_user, user_path(a.user_id) %>
                                            <%= " wants to be your #{crew_position} for " %>
                                            <%= p.title %>
                                        </p>                    
                                    <% end %>

                                <% end %>
                            <% end %>
                </div>
                <% end %>



                <h2>BIO</h2>
                <%= @me.bio %> <br>
                
                <div class="section">
                    <h2>Interests</h2>
                    
                    <% @me.interest.attributes.each_pair do |name, value| %>
                        <% if value == "1" %>
                            <div class="interest_block pure-u-1-3">
                                <p><%= name %></p>
                            </div>
                        
                        <% end %>
                    <% end %>
                </div>

                <div class="section">
                    <h2>Filmography</h2>

                    <% @me.projects.distinct.each do |project| %>
                        <% my_roles = project.roles.where(user_id: @me.id) %>

                        <p><%= link_to project.title, project_path(project.id)%> |

                            <% array = [] %>
                            <% my_roles.each do |r| %>
                                <% if r.title == nil %>
                                    <% array.push("Producer")%>
                                <% else %>
                                    <% array.push(r.title) %>
                                <% end %> 
                            <% end %>

                            <%= array.join(", ") %>
                        </p>

                    <% end %>
                </div>
                
            </div>
    </div>
</div>

<%= render "layouts/footer" %>
