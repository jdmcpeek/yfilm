<div class = "pure-g"> 
	
	<div class = "pure-u-1 pure-menu pure-menu-open pure-menu-horizontal" id="menu">
		<ul>
			<li><a href="/">YFA </a> </li>
			<li> <%= link_to "Screenings", '#' %> </li>
			<% if !signedin? %>
			<li> <%= link_to "Log In", new_user_path %> </li>
			<% else %>
			<li> <%= link_to "Projects", projects_path %></li>
			<li> <%= link_to "Profile", user_path(@me.id) %></li>
			<li> <%= link_to "Log Out", logout_path %> </li>
			<li> <%= link_to "Browse Users", users_path %> </li>
			<% end %>
			
			<li> 
				  <%= form_tag("/search", method: "get") do %>
				  <%= text_field_tag(:search) %>
				  <%= submit_tag("Search") %>
				  <% end %> 
			</li>


		</ul>
	</div>

	<div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
  	</div>

</div>